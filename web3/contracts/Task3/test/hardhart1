    settings: {
      optimizer: {
        enabled: true,
        runs: 200,
      },
    },
  },
  networks: {
    localhost: {
      url: "http://127.0.0.1:8545",
    },
    sepolia: {
      url: process.env.SEPOLIA_RPC_URL,
      accounts: [process.env.PRIVATE_KEY],
    },
  },
  etherscan: {
    // 配置 Etherscan API Key 用于合约验证
    apiKey: process.env.ETHERSCAN_API_KEY,
  },
  gasReporter: {
    // 配置 Gas 消耗报告器
